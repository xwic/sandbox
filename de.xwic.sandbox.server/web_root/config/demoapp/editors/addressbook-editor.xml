<?xml version="1.0" encoding="UTF-8"?>
<editor xsi:noNamespaceSchemaLocation="editor.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<id>default</id>
	<entity>de.xwic.sandbox.demoapp.model.entities.IAddressBook</entity>
	<script>
		function hasMiddlenName() {
			return entity.title == null;
		}
	</script>
	
	<templates>
		<style id="form">
			padding: 5;
		</style>
		<style id="field">
			width: 250;
		</style>
	</templates>
	
	<!-- The layout-->
	<layout>
		<!-- The root node of an editor is always a tab... -->
		<tab title="General">
			<composite layout="grid" cols="2" style="padding: 2">
				<group title="Basics" layout="grid" cols="2" template="form" colWidth="150;-1">
					
					<label property="title"/>
					<plRadio property="title" cols="5"/> 
					<!-- <plCombo property="title"/> -->
					
					<label property="firstName"/>
					<text property = "firstName" template="field"/>
					
					<label property="middleName" hideWhen="title == null"/>
					<text property = "middleName" template="field"/>
	
					<label property="lastName"/>
					<text property = "lastName" template="field"/>
					
				</group>

				<group title="Address" layout="grid" cols="2" template="form" colWidth="150;-1">
					<label property="addressStreet"/>
					<text property = "addressStreet" template="field"/>
					
					<label property="addressZip"/>
					<text property = "addressZip" template="field"/>
	
					<label property="addressCity"/>
					<text property = "addressCity" template="field"/>

					<label property="addressCountry"/>
					<text property = "addressCountry" template="field"/>
					
				</group>
 			</composite>
		</tab>
		<tab title="More">
			<composite layout="grid" cols="2" style="padding: 2">

				<group title="Contact" layout="grid" cols="2" template="form" colWidth="150;-1;">
					<label property="phone1"/>
					<text property = "phone1" template="field"/>
					
					<label property="phone2"/>
					<text property = "phone2" template="field"/>
	
					<label property="fax"/>
					<text property = "fax" template="field"/>

					<label property="email1"/>
					<text property = "email1" template="field"/>

					<label property="email2"/>
					<text property = "email2" template="field"/>

					<label property="webSite"/>
					<text property = "webSite" template="field"/>

					<label property="displayName"/>
					<yesNoRadio property="displayName" template="field"/>


				</group>

				<group title="Notes" layout="grid" cols="1" template="form">
					<text property="note" multiline="true" style="width: 415; height: 177"/>
				</group>				
			</composite>
		</tab>
	</layout>

</editor>

<?xml version="1.0" encoding="UTF-8"?>
<editor>
	<id>default</id>
	<entity>de.xwic.sandbox.demoapp.model.entities.IAddressBook</entity>
	<script>
		<!-- Global Script goes here -->
	</script>
	
	<templates>
		<style id="form">
			padding: 5;
		</style>
	</templates>
	
	<!-- The layout-->
	<layout>
		<!-- The root node of an editor is always a tab... -->
		<tab title="General">
			<composite layout="grid" cols="2" style="padding: 2">
				<group title="Basics" layout="grid" cols="2" template="form">
					
					<label property="title"/>
					<label title="Not Implemented Yet"/>
					
					<label property="firstName"/>
					<text property = "firstName"/>
					
					<label property="middleName"/>
					<text property = "middleName"/>
	
					<label property="lastName"/>
					<text property = "lastName"/>
					
				</group>

				<group title="Address" layout="grid" cols="2" template="form">
					<label property="addressStreet"/>
					<text property = "addressStreet"/>
					
					<label property="addressZip"/>
					<text property = "addressZip"/>
	
					<label property="addressCity"/>
					<text property = "addressCity"/>

					<label property="addressCountry"/>
					<text property = "addressCountry"/>
					
				</group>

				<group title="Contact" layout="grid" cols="2" template="form">
					<label property="phone1"/>
					<text property = "phone1"/>
					
					<label property="phone2"/>
					<text property = "phone2"/>
	
					<label property="fax"/>
					<text property = "fax"/>

					<label property="email1"/>
					<text property = "email1"/>

					<label property="email2"/>
					<text property = "email2"/>

					<label property="webSite"/>
					<text property = "webSite"/>
					
				</group>

				<group title="Notes" layout="grid" cols="1" template="form">
					<text property="note" multiline="true"/>
				</group>				
			</composite>
		</tab>
	</layout>

</editor>
<?xml version="1.0" encoding="UTF-8"?>
<editor xmlns="http://www.xwic.de" 
		xsi:schemaLocation="http://www.xwic.de editor.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<id>default</id>
	<entity>de.xwic.sandbox.demoapp.model.entities.ICampaign</entity>

	<templates>
		<style id="form">
			padding: 5;
		</style>
		<style id="field">
			width: 350;
		</style>
	</templates>
	
	<!-- The layout-->
	<layout>
		<!-- The root node of an editor is always a tab... -->
		<tab title="General">
			<composite layout="grid" cols="2" style="padding: 2">
				<group title="General" layout="grid" cols="2" template="form" colWidth="150;-1">
					<label property="name"/>
					<text property = "name" template="field"/>

					<label property="type"/>
					<plCombo property="type"/>

					<label property="startDate"/>
					<date property="startDate"/>

					<label property="endDate"/>
					<date property="endDate" />
				</group>
 			</composite>
		</tab>
	</layout>

</editor>

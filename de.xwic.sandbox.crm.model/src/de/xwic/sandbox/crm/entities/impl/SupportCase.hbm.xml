<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.xwic.sandbox.crm.entities.impl.SupportCase" table="CRM_SUPPORT_CASE">
	
		 <id name="id" type="long">
            <column name="SUPPORT_CASE_ID" not-null="true"/>
            <generator class="native"/>
        </id>

		<version column="VERSION" name="version" type="long"/>

 		<property name="deleted" column="DELETED" not-null="true"/>
 
        <property name="downloadVersion" type="long">
        	<column name="DOWNLOAD_VERSION"/>
        </property>
        <property name="serverEntityId" column="SRVENTITY_ID" not-null="true" type="int"/>
		<property name="createdAt" type="timestamp">
			<column name="CREATED_AT" />
		</property>
		<property name="changed" type="boolean">
			<column name="CHANGED" />
		</property>
		<property name="createdFrom">
			<column name="CREATED_FROM" length="50" />
		</property>
		<property name="lastModifiedFrom">
			<column name="LASTMODIFIED_FROM" length="50" />
		</property>
		<property name="lastModifiedAt" type="timestamp">
			<column name="LASTMODIFIED_AT" />
		</property>
		
		<!-- Entity fields -->
      
		<property name="caseNumber" column="CASE_NUMBER"   length="20" />
		<property name="shortDescription" column="SHORT_DESCRIPTION"   length="200" />
	    <many-to-one name="customer" class="de.xwic.sandbox.crm.entities.impl.Customer" column="CUSTOMER" not-null="false" lazy="proxy" />
	    <many-to-one name="reportedBy" class="de.xwic.sandbox.crm.entities.impl.Contact" column="REPORTED_BY" not-null="false" lazy="proxy" />
		<property name="description" column="DESCRIPTION"    type="materialized_clob"  />
	    <many-to-one name="severity" class="de.xwic.appkit.core.model.entities.impl.PicklistEntry" column="SEVERITY" not-null="false" lazy="false"/>
      
		<!-- End entity fields -->
		
	</class>
</hibernate-mapping>
	